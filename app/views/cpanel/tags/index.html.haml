%ul.breadcrumb
  %li
    %a{:href => "/cpanel"}= I18n.t('cpanel.title')
    %span.divider /
  %li.active= I18n.t("cpanel_tags.title")


%table.table.table-condensed.table-bordered.table-hover
  %tr
    %th= I18n.t('cpanel_tags.name')
    %th= I18n.t('cpanel_tags.section')
    %th

  - @cpanel_tags.each do |cpanel_tag|
    %tr
      %td{:style => 'width:700px;'}= cpanel_tag.name
      %td= cpanel_tag.section.try('name')
      %td
        = link_to '<i class="icon-pencil"></i>'.html_safe, edit_cpanel_tag_path(cpanel_tag)
        = link_to '<i class="icon-remove"></i>'.html_safe, cpanel_tag, :method => :delete, :data => { :confirm => I18n.t('common.confirm') }

= link_to I18n.t('common.new'), new_cpanel_tag_path
