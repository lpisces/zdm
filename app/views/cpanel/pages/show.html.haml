%ul.breadcrumb
  %li
    %a{:href => "/cpanel"}= I18n.t('cpanel.title')
    %span.divider /
  %li
    %a{:href => cpanel_pages_path}= I18n.t("cpanel_pages.title")
    %span.divider /
  %li.active= I18n.t('common.show')

%table.table.table-condensed.table-bordered.table-hover
  %tr
    %th= I18n.t('cpanel_pages.name')
    %td= @cpanel_page.name
  %tr
    %th= I18n.t('cpanel_pages.content')
    %td= @cpanel_page.content
  
= link_to I18n.t('common.edit'), edit_cpanel_page_path(@cpanel_page)
\|
= link_to I18n.t('common.back'), cpanel_pages_path
