= form_for(@attachment, :html => {:class => 'form-horizontal'} ) do |f|
  - if @attachment.errors.any?
    .alert.alert-error
      %button.close{"data-dismiss" => "alert", :type => "button"} x
      = I18n.t('errors.messages.not_saved', count: @attachment.errors.count)

  .control-group{:class => ('error' unless @attachment.errors[:name].empty?)}
    = f.label :name, I18n.t('attachments.name'), :class => 'control-label', :style => 'width:80px'
    .controls{:style => 'margin-left:100px;'}
      = f.text_field :name, :autofocus => true
      %span.help-inline= @attachment.errors[:name].first unless @attachment.errors[:name].empty?
  .control-group{:class => ('error' unless @attachment.errors[:file].empty?)}
    = f.label :file, I18n.t('attachments.file'), :class => 'control-label', :style => 'width:80px'
    .controls{:style => 'margin-left:100px;'}
      = f.text_field :file, :autofocus => true
      %span.help-inline= @attachment.errors[:file].first unless @attachment.errors[:file].empty?


  .control-group
    .controls{:style => 'margin-left:100px;'}
      = f.submit I18n.t('attachments.submit'), :class => 'btn btn-mini btn-success'
