%ul.breadcrumb
  %li
    %a{:href => "/cpanel"}= I18n.t('cpanel.title')
    %span.divider /
  %li.active= I18n.t("attachments.title")


%table.table.table-condensed.table-bordered.table-hover
  %tr
    %th= I18n.t('attachments.Name')
    %th= I18n.t('attachments.File')
    %th

  - @attachments.each do |attachment|
    %tr
      %td= attachment.name
      %td= attachment.file
      %td
        = link_to '<i class="icon-pencil"></i>'.html_safe, edit_attachment_path(attachment)
        = link_to '<i class="icon-remove"></i>'.html_safe, attachment, :method => :delete, :data => { :confirm => I18n.t('common.confirm') }

= link_to I18n.t('common.new'), new_attachment_path
